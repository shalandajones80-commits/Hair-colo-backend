# .env.example
PORT=4000
NODE_ENV=development

# Supabase
SUPABASE_URL=https://your-supabase-url.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenAI
OPENAI_API_KEY=sk-...

# Cloudinary
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_UNSIGNED_PRESET=unsigned_preset_name

# Database URL for local psql migrations (optional)
DATABASE_URL=postgres://user:pass@host:5432/dbname

# Render deploy (used in CI if you auto-deploy)
RENDER_API_KEY= # set this in GitHub secrets if using CI
RENDER_SERVICE_ID= # set this in GitHub secrets if using CI
